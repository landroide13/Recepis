
<%= render 'shared/title', title:"Log In" %>

<%= form_for(:session, :html => {class: "form-horizontal", role:"form"}, url: login_path) do |f| %>
      
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email%>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class:"form-control", placeholder:'Email', autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :password%>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class:"form-control", placeholder:'Enter Password', autofocus: true%>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
          <%= f.submit 'Log In', class:"btn btn-success btn-lg" %>
        </div>
      </div> 
      <div class="col-md-4 col-md-offset-4">
        [<%= link_to 'Cancel Request and Return to Recipes Listing', recipes_path %>]
      </div>
    <% end %>