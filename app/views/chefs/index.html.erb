
<%= render 'shared/title', title:"Chef's List " %>

<div align="center">
  <%= will_paginate %>
    <% @chefs.each do |c| %>
      <ul class="listing">
        <div  class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(c), chef_path(c)%>
            <li class="chef-title"><%= link_to c.chefname.capitalize, chef_path(c) %></li>
            <li><small><%= pluralize(c.recipes.count, "recipe") if c.recipes %></small></li>
            <% if if_logged? && current_chef.admin? && !c.admin? %>
             <li><%= link_to 'Delete this Chef', chef_path(c), method: :delete, data:{confirm: 'Are you sure ?' }, class:"btn btn-danger" %>
           <% end %>
          </div>
        </div>    
      </ul>
    <% end %>
  <%= will_paginate %>
</div>
